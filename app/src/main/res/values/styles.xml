<resources>

    <!-- Base application theme. -->
    <style name="FastReaderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TextViewTitle" parent="FastReaderTheme">
        <item name="android:textSize">@dimen/activity.size.title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GenericItem" parent="FastReaderTheme">
        <item name="android:textSize">@dimen/activity.size.content.primary</item>
    </style>

    <style name="SecondaryItem" parent="FastReaderTheme">
        <item name="android:textSize">@dimen/activity.size.content.secondary</item>
    </style>

    <style name="DetailsItem" parent="FastReaderTheme">
        <item name="android:textSize">@dimen/activity.size.content.details</item>
    </style>

    <style name="GenericButton" parent="SecondaryItem">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="MarginLayout" parent="FastReaderTheme">
        <item name="android:layout_marginLeft">@dimen/activity.margin.component</item>
        <item name="android:layout_marginRight">@dimen/activity.margin.component</item>
    </style>

    <style name="MarginScrollableLayout" parent="MarginLayout">
        <item name="android:scrollbars">none</item>
    </style>

</resources>
