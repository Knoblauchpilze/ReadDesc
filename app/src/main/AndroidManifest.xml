<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="knoblauch.readdesc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.activity.ReadActivity"
            android:label="@string/read_activity_title"/>
        <activity
            android:name=".gui.activity.CreateReadActivity"
            android:label="@string/create_read_activity_title" />
        <activity
            android:name=".gui.activity.SettingsActivity"
            android:label="@string/settings_activity_title" />
        <activity
            android:name=".gui.activity.RecentReadsActivity"
            android:label="@string/recent_reads_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>